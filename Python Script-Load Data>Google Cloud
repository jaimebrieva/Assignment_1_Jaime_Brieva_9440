import requests
import json
from google.cloud import storage
from google.oauth2 import service_account
import datetime
import pandas as pd 

SERVICE_ACCOUNT_KEY_PATH = "C:/Users/jaime/iCloudDrive/Documents/Baruch Class/CIS9440/Assignment/assignment1-9440-jaime-brieva-f1a6bd225875.json" 
PROJECT_ID = "assignment1-9440-jaime-brieva"


def upload_to_gcs(bucket_name, source_string, destination_blob_name):
    

    credentials = service_account.Credentials.from_service_account_file(
        SERVICE_ACCOUNT_KEY_PATH
    )

    storage_client = storage.Client(
        project=PROJECT_ID,
        credentials=credentials
    )
    
    bucket = storage_client.bucket(bucket_name)
    blob = bucket.blob(destination_blob_name)

    blob.upload_from_string(
        source_string, 
        content_type='text/csv'
    )
    print(f"Data stored google cloud://{bucket_name}/{destination_blob_name}")

